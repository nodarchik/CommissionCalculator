{
    "name": "calculator/commission-task-skeleton",
    "description": "Skeleton for Project recruitment task",
    "keywords": [],
    "type": "project",
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "tests\\": "tests/"
        }
    },
    "require": {
        "php": "8.2.*",
        "ext-bcmath": "*",
        "guzzlehttp/guzzle": "7.8.*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "3.*",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "10.*",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "config": {
        "sort-packages": true,
        "bin-dir": "bin"
    },
    "scripts": {
        "phpunit": "phpunit",
        "fix-cs": "php-cs-fixer fix",
        "test-cs": "php-cs-fixer fix --dry-run -v",
        "test": ["@phpunit", "@test-cs"]
    }
}
